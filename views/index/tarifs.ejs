        <form method="get">
          <input name="name" value="Mobil-home" hidden>
          <button class="button is-fullwidth" type="submit">Voir plus</button>
        </form>
      </div>
    </div>
  
    <div class="pricing-plan is-active">
      <div class="plan-header">Châlet</div>
      <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">€</span>80</span>/jour</div>
