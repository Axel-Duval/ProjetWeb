<%- include('../includes/header'); -%>

<%- include('../includes/navbarPersonnel'); -%>
    
<section class="container margin-top-1 margin-bottom-1">
    <div class="columns is-centered is-mobile">
        <div class="column is-narrow has-text-centered">
            <h1 class="title is-1 has-text-left">Campeurs</h1>
            <h2 class="subtitle has-text-primary has-text-left">Tous les campeurs</h2>
            <a class="button is-primary is-small is-rounded is-outlined" href="/personnel/campeurs">Dans le camping</a>
        </div>
    </div>
</section>

<section>
    <% if(flash){ %>
        <div class="columns is-centered has-text-centered">
            <div class="column is-6-desktop is-9-tablet is-12-mobile">
                <div class="notification is-<%= flash.type %>">
                    <button class="delete"></button>
                    <%= locals.flash.text %>
                </div>
            </div>
        </div>
    <% } %>
</section>

<section>
    <% if(rows){ %>
        <% for(var i=0; i < rows.length; i++){ %>
            <div class="columns is-centered">
                <div class="column is-6-desktop is-9-tablet">
                    <div class="box">
                        <div class="columns is-vcentered is-mobile">
                            <div class="column is-1">
                                <i class="fas fa-user fa-2x has-text-primary"></i>
                            </div>
                            <div class="column is-4">
                                <p class="title is-5">Nom : <span class="has-text-weight-light"><%= rows[i].nom %></span></p>
                            </div>
                            <div class="column is-5">
                                <p class="title is-5">Prenom : <span class="has-text-weight-light"><%= rows[i].prenom %></span></p>
                            </div>
                            <div class="column is-2 has-text-right">
                                <a class="button is-primary is-small is-rounded is-outlined" href="/personnel/campeur/<%=rows[i].id%>">Voir</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% } %>
</section>

<script src="/js/notifications.js"></script>

<%- include('../includes/footer'); -%>