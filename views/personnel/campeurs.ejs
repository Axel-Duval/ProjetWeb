<%- include('../includes/header'); -%>

<%- include('../includes/navbarPersonnel'); -%>

<div class="ovhi">
    <section class="container margin-top-1 ">
        <div class="columns columns is-centered is-mobile">
            <div class="column is-narrow has-text-centered">
                <h1 class="title is-size-1 has-text-left">Campeurs</h1>
                <h2 class="subtitle is-size-6 has-text-primary has-text-left">actuels</h2>
            </div>
        </div>
    </section>

    <section class="margin-top-1">
        <% if (locals.rows) { %>
            <table>
                <% for(var i=0; i < rows.length; i++) { %>
                    <div class="columns">
                        <div class="column is-4 is-offset-4">
                            <div class="box">
                                <div class="columns is-vcentered has-text-centered">
                                    <div class="column is-1">
                                        <i class="fas fa-user fa-2x has-text-info"></i>
                                    </div>
                                    <div class="column is-4">
                                        <p class="title is-5">Nom : <span class="has-text-weight-light"><%= rows[i].nom %></span></p>
                                    </div>
                                    <div class="column is-5">
                                        <p class="title is-5">Prenom : <span class="has-text-weight-light"><%= rows[i].prenom %></span></p>
                                    </div>
                                    <div class="column is-2">
                                        <a class="button is-small is-info" href="campeur/<%=rows[i].id%>">Voir</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </table>
        <%}%>
    </section>

    <div class="columns is-centered">
        <div class="column is-4 has-text-centered">
            <% if (locals.flash) { %>
            <div class="notification is-<%= flash.type %>">
                <button class="delete"></button>
                <%= locals.flash.text %>
            </div>
            <%}%>
        </div>
    </div>
</div>

<%- include('../includes/footer'); -%>