<%- include('../includes/header'); -%>

<%- include('../includes/navbarPersonnel'); -%>

<div class="ovhi">
    <section class="container margin-top-1 ">
        <div class="columns columns is-centered is-mobile">
            <div class="column is-narrow has-text-centered">
                <h1 class="title is-size-1 has-text-left">Arrivées</h1>
                <h2 class="subtitle is-size-6 has-text-primary has-text-left">aujourd'hui</h2>
            </div>
        </div>
    </section>

    <section class="margin-top-1">
        <% if (locals.rows) { %>
            <table>
                <% for(var i=0; i < rows.length; i++) { %>
                    <div class="columns has-text-centered">
                        <div class="column is-6 is-offset-3">
                        <div class="box">
                            <% if (rows[i].nomChalet) { %>
                                <% if(rows[i].prestige == 1){ %>
                                    <div class="columns is-vcentered is-desktop">
                                        <div class="column is-2">
                                            <span class="icon has-text-warning"><i class="fas fa-star fa-2x"></i></span>
                                        </div>
                                        <div class="column is-4">
                                            <p class="title is-5">Nom : <span class="has-text-weight-light"><%= rows[i].nom %> </span>{<%= rows[i].idCampeur %>}</p>
                                        </div>
                                        <div class="column is-4">
                                            <p class="title is-5">Suite de luxe : <span class="has-text-weight-light"><%= rows[i].nomChalet %></span></p>
                                        </div>
                                        <div class="column is-2">
                                            <a class="button is-small is-warning" href="/personnel/arrivees/<%=rows[i].id%>">Checkin</a>
                                        </div>
                                    </div>
                                <% }else{ %>
                                    <div class="columns is-vcentered has-text-left is-mobile">
                                        <div class="column is-2">
                                            <span class="icon has-text-success"><i class="fas fa-home fa-2x"></i></span>
                                        </div>
                                        <div class="column is-4">
                                            <p class="title is-5">Nom : <span class="has-text-weight-light"><%= rows[i].nom %> </span>{<%= rows[i].idCampeur %>}</p>
                                        </div>
                                        <div class="column is-4">
                                            <p class="title is-5">Châlet : <span class="has-text-weight-light"><%= rows[i].nomChalet %></span></p>
                                        </div>
                                        <div class="column is-2">
                                            <a class="button is-small is-success" href="/personnel/arrivees/<%=rows[i].id%>">Checkin</a>
                                        </div>
                                    </div>
                                <% } %>
                            <% }else{ %>
                                <div class="columns is-vcentered is-desktop">
                                    <div class="column is-2">
                                        <span class="icon has-text-info"><i class="fab fa-pagelines fa-2x"></i></span>
                                    </div>
                                    <div class="column is-4">
                                        <p class="title is-5">Nom : <span class="has-text-weight-light"><%= rows[i].nom %> </span>{<%= rows[i].idCampeur %>}</p>
                                    </div>
                                    <div class="column is-4">
                                        <p class="title is-5">Emp n° <span class="has-text-weight-light"><%= rows[i].id %></span></p>
                                    </div>
                                    <div class="column is-2">
                                        <a class="button is-small is-info" href="/personnel/arrivees/<%=rows[i].id%>">Checkin</a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        </div>
                    </div>
                <% } %>
            </table>
        <%}%>
    </section>


    <div class="columns is-centered">
        <div class="column is-4 has-text-centered">
            <% if (locals.flash) { %>
            <div class="notification is-<%= flash.type %>">
                <button class="delete"></button>
                <%= locals.flash.text %>
            </div>
            <%}%>
        </div>
    </div>
</div>

<script src="/js/notifications.js"></script>

<%- include('../includes/footer'); -%>