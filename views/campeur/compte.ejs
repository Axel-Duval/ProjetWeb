<%- include('../includes/header'); -%>

<%- include('../includes/navbarCampeur'); -%>


<div class="ovhi">
    <section class="container margin-top-1">
        <div class="columns columns is-centered is-mobile">
            <div class="column is-narrow has-text-centered">
    
                <h1 class="title is-size-1 has-text-left">Mon compte</h1>
                <h2 class="subtitle is-size-6 has-text-primary has-text-left">modifications</h2>
    
                <form method="post">
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" value="<%=camp.nom%>" name="nom" required>  <!-- nom -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-user-friends"></i>
                        </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" value="<%=camp.prenom%>" name="prenom" required>  <!-- prenom -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-user"></i>
                        </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="email" value="<%=camp.mail%>" name="email" required>  <!-- mail -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="text" placeholder="Tel : 07 23 ..." name="telephone" required>  <!-- Telephone -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-phone"></i>
                        </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="password" placeholder="Mot de passe" name="password" required>    <!-- Mot de passe -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>                
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                        <input class="input" type="password" placeholder="Confirmation mdp" name="confirm_password" required>    <!-- Confirmation du mot de passe -->
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>                
                        </p>
                    </div>
                    <div class="control has-text-centered margin-button">
                        <button type="submit" class="button is-rounded">Modifier</button>   <!-- Creation -->
                    </div>
                </form>
                <a href="/connexion" class="button is-primary is-inverted">Annuler</a>  <!-- Annulation -->           
            </div>
        </div>
        <div class="columns columns is-centered is-mobile">
            <div class="column is-half has-text-centered">
            <% if (locals.flash) { %>
                <div class="notification is-<%= flash.type %>">
                    <button class="delete"></button>
                    <%= locals.flash.text %>
                </div>
                <%}%>
            </div>
        </div>
    </section>
</div>

<script src="/js/notifications.js"></script>

<%- include('../includes/footer'); -%>