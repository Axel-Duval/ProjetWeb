<%- include('../includes/header'); -%>

<%- include('../includes/navbarCampeur'); -%>

<section class="container margin-top-1 margin-bottom-1">
    <div class="columns is-centered is-mobile">
        <div class="column is-narrow has-text-centered">
            <h1 class="title is-1 has-text-left">Votre compte</h1>
            <h2 class="subtitle has-text-primary has-text-left">Modifications</h2>
        </div>
    </div>
</section>

<section>
    <% if(locals.flash){ %>
        <div class="columns is-centered has-text-centered">
            <div class="column is-3-desktop is-4-tablet is-6-mobile is-offset-3-mobile has-text-centered">
                <div class="notification is-<%= flash.type %>">
                    <button class="delete"></button>
                    <%= locals.flash.text %>
                </div>
            </div>
        </div>
    <% } %>
</section>

<section>
    <div class="columns is-centered">
        <div class="column is-3-desktop is-4-tablet is-6-mobile is-offset-3-mobile has-text-centered">
            <form method="post">
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" value="<%=camp.nom%>" name="nom" required>  <!-- nom -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-user-friends"></i>
                    </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" value="<%=camp.prenom%>" name="prenom" required>  <!-- prenom -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="email" value="<%=camp.mail%>" name="email" required>  <!-- mail -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" placeholder="Tel : 07 23 ..." name="telephone" required>  <!-- Telephone -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-phone"></i>
                    </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="password" placeholder="Mot de passe" name="password" required>    <!-- Mot de passe -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>                
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                    <input class="input" type="password" placeholder="Confirmation mdp" name="confirm_password" required>    <!-- Confirmation du mot de passe -->
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>                
                    </p>
                </div>
                <div class="control has-text-centered margin-button">
                    <button type="submit" class="button is-primary is-small is-rounded is-outlined">Modifier</button>
                    <a class="button is-secondary is-small is-rounded is-outlined" href="/connexion">Retour</a>
                </div>
            </form>        
        </div>
    </div>
</section>

<script src="/js/notifications.js"></script>

<%- include('../includes/footer'); -%>