<%- include('../includes/header'); -%>

<%- include('../includes/navbarCampeur'); -%>

<div class="ovhi">
    <section class="container margin-top-1">
        <div class="columns columns is-centered is-mobile">
            <div class="column is-narrow has-text-centered">
    
                <h1 class="title is-size-1 has-text-left">Signaler</h1>
                <h2 class="subtitle is-size-6 has-text-primary has-text-left">un incident</h2>
    
                <form method="post" class="margin-top-1">
                    <div class="field">
                        <div class="select">
                            <select name="type" id="type">
                                <%if(types){%>
                                    <% for(var i=0; i < types.length; i++) { %>
                                        <option value="<%=types[i].id%>"><%=types[i].libelle%></option>
                                    <%}%>
                                <%}%>
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <div class="select">
                            <select name="infrastructure" id="infrastructure">
                                <%if(infrastructures){%>
                                    <% for(var i=0; i < infrastructures.length; i++) { %>
                                        <option value="<%=infrastructures[i].id%>"><%=infrastructures[i].libelle%></option>
                                    <%}%>
                                <%}%>
                            </select>
                        </div>
                    </div>

                    <div class="control has-text-centered margin-button">
                        <button type="submit" class="button is-rounded">Envoyer</button>   <!-- Creation -->
                    </div>
                </form>
    
                <a href="/connexion" class="button is-primary is-inverted">Annuler</a>  <!-- Annulation -->           
            </div>
        </div>
        <div class="columns columns is-centered is-mobile">
            <div class="column is-half has-text-centered">
            <% if (locals.flash) { %>
                <div class="notification is-<%= flash.type %>">
                    <button class="delete"></button>
                    <%= locals.flash.text %>
                </div>
                <%}%>
            </div>
        </div>
    </section>
</div>

<script src="/js/notifications.js"></script>

<%- include('../includes/footer'); -%>